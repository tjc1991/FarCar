<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="110dp" >
    
    <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
           <ImageView
		        android:id="@+id/imageView2"
		        android:layout_width="50dp"
		        android:layout_height="90dp"
		        android:layout_marginTop="10dp"
		        android:src="@drawable/business_icon_here_to_there" /> 
 
<!--            <View
		        android:layout_width="fill_parent"
		        android:layout_marginTop="15dp"
		        android:layout_height="2dp"
		    		android:background="@color/green"/>  -->
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
           <TextView
		        android:id="@+id/carmsg_from"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:ellipsize="end"
		        android:hint="@string/city_name_from"
		        android:text=""
		        android:textColor="#ff444444"
		        android:textSize="22.0sp" /> 
		        
           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="60dp"
                   android:layout_marginTop="10dp"
                   android:textColor="@color/red"
                   android:text="订单状态:"
                   android:textSize="20.0sp" />

               <ImageView
                   android:id="@+id/carmsg_phone"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginRight="21dp"
                   android:background="@drawable/call_image"
                   android:clickable="true" />

               <TextView
                   android:id="@+id/carmsg_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignBaseline="@+id/textView1"
                   android:layout_alignBottom="@+id/textView1"
                   android:layout_toRightOf="@+id/textView1"
                   android:text="欢迎接单"
                   android:textSize="15.0sp" />
           </RelativeLayout>
           
               <TextView
			        android:id="@+id/carmsg_go"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:ellipsize="end"
			        android:text=""
			        android:textColor="#ff444444"
			        android:textSize="22.0sp" />
               
<!--               <View
			        android:layout_width="fill_parent"
			        android:layout_height="2dp"
			        android:layout_marginTop="5dp"
			    		android:background="@color/green"/> -->
        
    </LinearLayout>

</LinearLayout>
